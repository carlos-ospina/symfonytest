{% extends "::base.html.twig" %}

{% block stylesheets %}
    <link rel="stylesheet" type="text/css" href="{{ asset('bundles/admin/css/main.css') }}">
{% endblock %}

{% block body %}
    <header>
        <p>Symfony 2 Blog - Admin</p>
        <nav>
            <ul>
                <li><a href="#">Post</a></li>
                <li><a href="#">Authors</a></li>
            </ul>
        </nav>
    </header>

    <section>
        {% for type, messages in app.session.flashBag.all() %}
            {% for message in messages %}
                <p class="session-message">{{ message }}</p>
            {% endfor %}
        {% endfor %}

        {% block session %}{% endblock %}
    </section>
{% endblock %}
